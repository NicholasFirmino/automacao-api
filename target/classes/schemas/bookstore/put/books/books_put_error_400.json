{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Books PUT Error Response",
  "description": "Schema for an error response when updating book information.",
  "required": [
    "code",
    "message"
  ],
  "properties": {
    "code": {
      "type": "integer",
      "description": "The error code indicating what went wrong.",
      "default": 0
    },
    "message": {
      "type": "string",
      "description": "A message explaining the error.",
      "default": "string"
    }
  },
  "additionalProperties": false
}
