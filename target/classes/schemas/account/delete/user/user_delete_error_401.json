{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "User Delete Error Response",
  "description": "Schema for error response when a user deletion fails.",
  "required": [
    "code",
    "message"
  ],
  "properties": {
    "code": {
      "type": "integer",
      "description": "Error code."
    },
    "message": {
      "type": "string",
      "description": "Error message detailing the issue."
    }
  },
  "additionalProperties": false
}
